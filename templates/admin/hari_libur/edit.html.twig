{% extends 'base.html.twig' %}

{% block title %}Edit Hari Libur{% endblock %}

{% block body %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">
        <i class="bi bi-pencil-square"></i>
        Edit Hari Libur
    </h1>
    
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a href="{{ path('admin_hari_libur_show', {'id': hari_libur.id}) }}" class="btn btn-outline-info">
                <i class="bi bi-eye"></i> Lihat Detail
            </a>
        </div>
        <a href="{{ path('admin_hari_libur_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Kembali
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Form Edit Hari Libur</h5>
                <small class="text-muted">
                    Dibuat: {{ hari_libur.createdAt|date('d/m/Y H:i') }}
                </small>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.tanggal, 'Tanggal Libur', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.tanggal, {'attr': {'class': 'form-control'}}) }}
                            {% if form.tanggal.vars.help %}
                                <div class="form-text">{{ form.tanggal.vars.help }}</div>
                            {% endif %}
                            {{ form_errors(form.tanggal) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Hari</label>
                            <input type="text" class="form-control" id="day-display" readonly 
                                   value="{{ hari_libur.tanggal|date('l')|trans }}" 
                                   placeholder="Pilih tanggal untuk melihat hari">
                            <div class="form-text">Hari akan tampil otomatis setelah memilih tanggal</div>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    {{ form_label(form.keterangan, 'Keterangan', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.keterangan, {'attr': {'class': 'form-control'}}) }}
                    {% if form.keterangan.vars.help %}
                        <div class="form-text">{{ form.keterangan.vars.help }}</div>
                    {% endif %}
                    {{ form_errors(form.keterangan) }}
                </div>

                <div class="d-flex justify-content-between">
                    <a href="{{ path('admin_hari_libur_index') }}" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Batal
                    </a>
                    
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Simpan Perubahan
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <!-- Current Info Card -->
        <div class="card">
            <div class="card-header bg-light">
                <h6 class="mb-0">
                    <i class="bi bi-info-circle"></i> Informasi Saat Ini
                </h6>
            </div>
            <div class="card-body">
                <table class="table table-borderless table-sm mb-0">
                    <tr>
                        <th width="40%">Tanggal:</th>
                        <td>{{ hari_libur.tanggal|date('d F Y') }}</td>
                    </tr>
                    <tr>
                        <th>Hari:</th>
                        <td>
                            <span class="badge 
                                {% if hari_libur.tanggal|date('w') == 0 %}bg-danger
                                {% elseif hari_libur.tanggal|date('w') == 6 %}bg-warning
                                {% else %}bg-success
                                {% endif %}">
                                {{ hari_libur.tanggal|date('l')|trans }}
                            </span>
                        </td>
                    </tr>
                    <tr>
                        <th>Keterangan:</th>
                        <td>{{ hari_libur.keterangan }}</td>
                    </tr>
                    <tr>
                        <th>Terakhir Update:</th>
                        <td>
                            <small class="text-muted">
                                {{ hari_libur.updatedAt|date('d/m/Y H:i') }}
                            </small>
                        </td>
                    </tr>
                </table>
            </div>
        </div>

        <!-- Action Card -->
        <div class="card mt-3">
            <div class="card-header bg-light">
                <h6 class="mb-0">
                    <i class="bi bi-tools"></i> Aksi Lainnya
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="{{ path('admin_hari_libur_show', {'id': hari_libur.id}) }}" 
                       class="btn btn-outline-info btn-sm">
                        <i class="bi bi-eye"></i> Lihat Detail
                    </a>
                    
                    <button type="button" 
                            class="btn btn-outline-danger btn-sm"
                            onclick="confirmDelete({{ hari_libur.id }}, '{{ hari_libur.tanggal|date('d/m/Y') }} - {{ hari_libur.keterangan|e('js') }}')">
                        <i class="bi bi-trash"></i> Hapus Hari Libur
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Form (Hidden) -->
<form id="deleteForm" method="post" style="display: none;">
    <input type="hidden" name="_token" id="deleteToken">
</form>

{% endblock %}

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const dateInput = document.querySelector('input[type="date"]');
    const dayDisplay = document.getElementById('day-display');
    
    if (dateInput && dayDisplay) {
        dateInput.addEventListener('change', function() {
            if (this.value) {
                const date = new Date(this.value);
                const days = ['Minggu', 'Senin', 'Selasa', 'Rabu', 'Kamis', 'Jumat', 'Sabtu'];
                dayDisplay.value = days[date.getDay()];
                
                // Add class based on day type
                dayDisplay.classList.remove('text-danger', 'text-warning', 'text-success');
                if (date.getDay() === 0) { // Sunday
                    dayDisplay.classList.add('text-danger');
                } else if (date.getDay() === 6) { // Saturday
                    dayDisplay.classList.add('text-warning');
                } else {
                    dayDisplay.classList.add('text-success');
                }
            } else {
                dayDisplay.value = '';
                dayDisplay.classList.remove('text-danger', 'text-warning', 'text-success');
            }
        });
        
        // Trigger change event if date is already selected
        if (dateInput.value) {
            dateInput.dispatchEvent(new Event('change'));
        }
    }
});

function confirmDelete(id, description) {
    if (confirm(`Yakin ingin menghapus hari libur "${description}"?`)) {
        const form = document.getElementById('deleteForm');
        const token = '{{ csrf_token('delete') }}' + id;
        
        form.action = '{{ path('admin_hari_libur_delete', {'id': hari_libur.id}) }}';
        document.getElementById('deleteToken').value = token;
        form.submit();
    }
}
</script>
{% endblock %}