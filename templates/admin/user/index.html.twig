{% extends 'base.html.twig' %}

{% block title %}Kelola User - Admin{% endblock %}

{% block body %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Kelola User</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a href="{{ path('admin_user_new') }}" class="btn btn-primary">
                <i class="bi bi-person-plus"></i> Tambah User Baru
            </a>
        </div>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-lg-3 col-md-6">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title">Total User</h6>
                        <h3 class="mb-0">{{ users|length }}</h3>
                    </div>
                    <div class="align-self-center">
                        <i class="bi bi-people fs-2"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title">PNS</h6>
                        <h3 class="mb-0">{{ users|filter(u => u.statusKepegawaian == 'PNS')|length }}</h3>
                    </div>
                    <div class="align-self-center">
                        <i class="bi bi-person-check fs-2"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title">PPPK</h6>
                        <h3 class="mb-0">{{ users|filter(u => u.statusKepegawaian == 'PPPK')|length }}</h3>
                    </div>
                    <div class="align-self-center">
                        <i class="bi bi-person-badge fs-2"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title">Admin</h6>
                        <h3 class="mb-0">{{ users|filter(u => 'ROLE_ADMIN' in u.roles)|length }}</h3>
                    </div>
                    <div class="align-self-center">
                        <i class="bi bi-shield-check fs-2"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Filter Section -->
<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="bi bi-filter"></i> Filter Data
        </h5>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label class="form-label">Status Kepegawaian</label>
                <select name="status" class="form-select">
                    <option value="">Semua Status</option>
                    <option value="PNS" {{ app.request.get('status') == 'PNS' ? 'selected' : '' }}>PNS</option>
                    <option value="PPPK" {{ app.request.get('status') == 'PPPK' ? 'selected' : '' }}>PPPK</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Unit Kerja</label>
                <select name="unit_kerja" class="form-select">
                    <option value="">Semua Unit</option>
                    {% for unit in units %}
                        <option value="{{ unit.id }}" {{ app.request.get('unit_kerja') == (unit.id ~ '') ? 'selected' : '' }}>
                            {{ unit.nama }}
                        </option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-md-4">
                <label class="form-label">Cari Nama/NIP</label>
                <input type="text" name="search" class="form-control" 
                       value="{{ app.request.get('search') }}" 
                       placeholder="Masukkan nama atau NIP...">
            </div>
            <div class="col-md-2">
                <label class="form-label">&nbsp;</label>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search"></i> Filter
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Users Table -->
<div class="card">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="bi bi-list-ul"></i> Daftar User
        </h5>
    </div>
    <div class="card-body p-0">
        {% if users|length > 0 %}
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th width="50">#</th>
                            <th>NIP</th>
                            <th>Nama</th>
                            <th>Email</th>
                            <th>Unit Kerja</th>
                            <th>Status</th>
                            <th>Roles</th>
                            <th width="150" class="text-center">Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ loop.index }}</td>
                                <td>
                                    <strong>{{ user.nip }}</strong>
                                </td>
                                <td>{{ user.nama }}</td>
                                <td>
                                    {% if user.email %}
                                        <a href="mailto:{{ user.email }}">{{ user.email }}</a>
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if user.unitKerja %}
                                        <span class="badge bg-info">{{ user.unitKerja.nama }}</span>
                                    {% else %}
                                        <span class="badge bg-warning">Belum diset</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <span class="badge {{ user.statusKepegawaian == 'PNS' ? 'bg-success' : 'bg-primary' }}">
                                        {{ user.statusKepegawaian }}
                                    </span>
                                </td>
                                <td>
                                    {% for role in user.roles %}
                                        {% if role != 'ROLE_USER' %}
                                            <span class="badge bg-warning me-1">{{ role|replace({'ROLE_': ''}) }}</span>
                                        {% endif %}
                                    {% endfor %}
                                    {% if user.roles|length == 1 and user.roles[0] == 'ROLE_USER' %}
                                        <span class="badge bg-secondary">USER</span>
                                    {% endif %}
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a href="{{ path('admin_user_show', {'id': user.id}) }}" 
                                           class="btn btn-sm btn-outline-info" title="Lihat Detail">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="{{ path('admin_user_edit', {'id': user.id}) }}" 
                                           class="btn btn-sm btn-outline-primary" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-danger btn-delete" 
                                                data-bs-toggle="modal" data-bs-target="#deleteModal{{ user.id }}"
                                                title="Hapus">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>

                                    <!-- Delete Confirmation Modal -->
                                    <div class="modal fade" id="deleteModal{{ user.id }}" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Konfirmasi Hapus</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p>Yakin ingin menghapus user <strong>{{ user.nama }}</strong> ({{ user.nip }})?</p>
                                                    <div class="alert alert-warning">
                                                        <i class="bi bi-exclamation-triangle"></i>
                                                        <strong>Peringatan:</strong> Tindakan ini tidak dapat dibatalkan dan akan menghapus semua data terkait user ini.
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
                                                    <form action="{{ path('admin_user_delete', {'id': user.id}) }}" method="post" class="d-inline">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete_' ~ user.id) }}">
                                                        <button type="submit" class="btn btn-danger">
                                                            <i class="bi bi-trash"></i> Ya, Hapus
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="text-center py-5">
                <i class="bi bi-person-x fs-1 text-muted"></i>
                <p class="text-muted mt-3">
                    {% if app.request.query.count > 0 %}
                        Tidak ada user yang sesuai dengan filter yang dipilih.
                    {% else %}
                        Belum ada data user yang tersimpan.
                    {% endif %}
                </p>
                <a href="{{ path('admin_user_new') }}" class="btn btn-primary">
                    <i class="bi bi-person-plus"></i> Tambah User Pertama
                </a>
            </div>
        {% endif %}
    </div>
</div>

{% if users|length > 0 %}
    <div class="row mt-4">
        <div class="col-md-6">
            <small class="text-muted">
                Menampilkan {{ users|length }} user
            </small>
        </div>
        <div class="col-md-6 text-end">
            <small class="text-muted">Data terakhir diperbarui: {{ "now"|date("d/m/Y H:i") }}</small>
        </div>
    </div>
{% endif %}

{% endblock %}

{% block javascripts %}
<script>
// Auto-refresh statistics every 30 seconds
setInterval(function() {
    // You can implement AJAX refresh here if needed
}, 30000);

// Enhanced search functionality
document.querySelector('input[name="search"]').addEventListener('keyup', function(e) {
    if (e.key === 'Enter') {
        this.closest('form').submit();
    }
});
</script>
{% endblock %}