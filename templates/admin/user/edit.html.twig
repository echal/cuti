{% extends 'base.html.twig' %}

{% block title %}Edit User - {{ user.nama }}{% endblock %}

{% block body %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Edit User</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a href="{{ path('admin_user_show', {'id': user.id}) }}" class="btn btn-outline-info">
                <i class="bi bi-eye"></i> Detail
            </a>
        </div>
        <a href="{{ path('admin_user_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Kembali
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-pencil"></i> Form Edit User
                </h5>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                
                <!-- Basic Information -->
                <fieldset class="mb-4">
                    <legend class="h6 text-primary border-bottom pb-2">Informasi Dasar</legend>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.nip, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.nip) }}
                                {{ form_errors(form.nip) }}
                                {% if form.nip.vars.help %}
                                    <div class="form-text">{{ form.nip.vars.help }}</div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.nama, null, {'label_attr': {'class': 'form-label required'}}) }}
                                {{ form_widget(form.nama) }}
                                {{ form_errors(form.nama) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.email, null, {'label_attr': {'class': 'form-label required'}}) }}
                                {{ form_widget(form.email) }}
                                {{ form_errors(form.email) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.plainPassword, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.plainPassword) }}
                                {{ form_errors(form.plainPassword) }}
                                {% if form.plainPassword.vars.help %}
                                    <div class="form-text">{{ form.plainPassword.vars.help }}</div>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.jenisKelamin, null, {'label_attr': {'class': 'form-label required'}}) }}
                                <div class="mt-2">
                                    {{ form_widget(form.jenisKelamin) }}
                                </div>
                                {{ form_errors(form.jenisKelamin) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.jumlahAnak, null, {'label_attr': {'class': 'form-label required'}}) }}
                                {{ form_widget(form.jumlahAnak) }}
                                {{ form_errors(form.jumlahAnak) }}
                                {% if form.jumlahAnak.vars.help %}
                                    <div class="form-text">{{ form.jumlahAnak.vars.help }}</div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </fieldset>

                <!-- Employment Information -->
                <fieldset class="mb-4">
                    <legend class="h6 text-primary border-bottom pb-2">Informasi Kepegawaian</legend>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.statusKepegawaian, null, {'label_attr': {'class': 'form-label required'}}) }}
                                {{ form_widget(form.statusKepegawaian) }}
                                {{ form_errors(form.statusKepegawaian) }}
                                {% if form.statusKepegawaian.vars.help %}
                                    <div class="form-text">{{ form.statusKepegawaian.vars.help }}</div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.statusPegawai, null, {'label_attr': {'class': 'form-label required'}}) }}
                                {{ form_widget(form.statusPegawai) }}
                                {{ form_errors(form.statusPegawai) }}
                                {% if form.statusPegawai.vars.help %}
                                    <div class="form-text">{{ form.statusPegawai.vars.help }}</div>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.jabatan, null, {'label_attr': {'class': 'form-label required'}}) }}
                                {{ form_widget(form.jabatan) }}
                                {{ form_errors(form.jabatan) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.golongan, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.golongan) }}
                                {{ form_errors(form.golongan) }}
                                {% if form.golongan.vars.help %}
                                    <div class="form-text">{{ form.golongan.vars.help }}</div>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.unitKerja, null, {'label_attr': {'class': 'form-label required'}}) }}
                                {{ form_widget(form.unitKerja) }}
                                {{ form_errors(form.unitKerja) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.telp, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.telp) }}
                                {{ form_errors(form.telp) }}
                                {% if form.telp.vars.help %}
                                    <div class="form-text">{{ form.telp.vars.help }}</div>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                </fieldset>

                <!-- Service Dates (for PNS only) -->
                <fieldset class="mb-4" id="pns-dates">
                    <legend class="h6 text-primary border-bottom pb-2">Tanggal Kepegawaian (Khusus PNS)</legend>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.tmtCpns, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.tmtCpns) }}
                                {{ form_errors(form.tmtCpns) }}
                                {% if form.tmtCpns.vars.help %}
                                    <div class="form-text">{{ form.tmtCpns.vars.help }}</div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.tmtPns, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.tmtPns) }}
                                {{ form_errors(form.tmtPns) }}
                                {% if form.tmtPns.vars.help %}
                                    <div class="form-text">{{ form.tmtPns.vars.help }}</div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </fieldset>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check"></i> Simpan Perubahan
                    </button>
                    <a href="{{ path('admin_user_show', {'id': user.id}) }}" class="btn btn-outline-secondary">
                        <i class="bi bi-x"></i> Batal
                    </a>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <!-- Current User Info -->
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="bi bi-person-circle"></i> Data Saat Ini
                </h6>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-5">{{ user.identifierType }}</dt>
                    <dd class="col-sm-7">
                        {% if user.nip %}
                            <span class="badge bg-primary">{{ user.nip }}</span>
                        {% else %}
                            <span class="text-muted">-</span>
                        {% endif %}
                    </dd>
                    
                    <dt class="col-sm-5">Status</dt>
                    <dd class="col-sm-7">
                        {% if user.statusKepegawaian == 'PNS' %}
                            <span class="badge bg-success">{{ user.statusKepegawaian }}</span>
                        {% else %}
                            <span class="badge bg-info">{{ user.statusKepegawaian }}</span>
                        {% endif %}
                    </dd>
                    
                    <dt class="col-sm-5">Unit Kerja</dt>
                    <dd class="col-sm-7">
                        <small>{{ user.unitKerja.kode }}</small><br>
                        <small class="text-muted">{{ user.unitKerja.nama }}</small>
                    </dd>
                    
                    <dt class="col-sm-5">Role</dt>
                    <dd class="col-sm-7">
                        {% for role in user.roles %}
                            {% if role == 'ROLE_ADMIN' %}
                                <span class="badge bg-danger me-1">Admin</span>
                            {% elseif role == 'ROLE_APPROVER' %}
                                <span class="badge bg-warning me-1">Approver</span>
                            {% elseif role == 'ROLE_USER' %}
                                <span class="badge bg-primary me-1">User</span>
                            {% endif %}
                        {% endfor %}
                    </dd>
                </dl>
            </div>
        </div>

        <!-- Edit Guidelines -->
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="bi bi-info-circle"></i> Panduan Edit
                </h6>
            </div>
            <div class="card-body">
                <ul class="list-unstyled mb-0">
                    <li class="mb-2">
                        <i class="bi bi-check-circle text-success me-1"></i>
                        <small><strong>NIP:</strong> Kosongkan password untuk tidak mengubah</small>
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-check-circle text-success me-1"></i>
                        <small><strong>Email:</strong> Harus unik dalam sistem</small>
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-check-circle text-success me-1"></i>
                        <small><strong>Status:</strong> Ubah dari PNS ke PPPK atau sebaliknya</small>
                    </li>
                    <li class="mb-0">
                        <i class="bi bi-check-circle text-success me-1"></i>
                        <small><strong>TMT:</strong> Hanya untuk pegawai PNS</small>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Status Information -->
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="bi bi-question-circle"></i> Status Kepegawaian
                </h6>
            </div>
            <div class="card-body">
                <h6 class="text-muted">PNS (Pegawai Negeri Sipil)</h6>
                <ul class="mb-3">
                    <li><small>Memiliki NIP 18 digit</small></li>
                    <li><small>Ada TMT CPNS dan TMT PNS</small></li>
                    <li><small>Bisa mengakses semua jenis cuti</small></li>
                </ul>
                
                <h6 class="text-muted">PPPK (Pegawai Pemerintah dengan Perjanjian Kerja)</h6>
                <ul class="mb-0">
                    <li><small>Tidak wajib memiliki NIP</small></li>
                    <li><small>Tidak ada TMT CPNS/PNS</small></li>
                    <li><small>Terbatas pada jenis cuti tertentu</small></li>
                </ul>
            </div>
        </div>

        <!-- Password Information -->
        <div class="alert alert-info">
            <i class="bi bi-shield-lock"></i>
            <strong>Catatan Password:</strong><br>
            <small>Kosongkan field password jika tidak ingin mengubah password. Jika diisi, password akan diperbarui dengan nilai baru.</small>
        </div>

        <!-- System Info -->
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="bi bi-info-circle"></i> Informasi Sistem
                </h6>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-6">Dibuat</dt>
                    <dd class="col-sm-6">
                        <small class="text-muted">{{ user.createdAt|date('d/m/Y H:i') }}</small>
                    </dd>
                    
                    <dt class="col-sm-6">Terakhir Update</dt>
                    <dd class="col-sm-6">
                        <small class="text-muted">{{ user.updatedAt|date('d/m/Y H:i') }}</small>
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('form');
    const statusKepegawaianField = document.getElementById('user_statusKepegawaian');
    const pnsDatesFieldset = document.getElementById('pns-dates');
    const nipField = document.getElementById('user_nip');
    
    // Toggle PNS-specific fields based on status kepegawaian
    function togglePnsFields() {
        const isPns = statusKepegawaianField.value === 'PNS';
        
        if (pnsDatesFieldset) {
            pnsDatesFieldset.style.display = isPns ? 'block' : 'none';
        }
        
        // Update NIP field requirement
        if (nipField) {
            const nipLabel = document.querySelector('label[for="user_nip"]');
            if (isPns) {
                nipField.setAttribute('required', 'required');
                if (nipLabel && !nipLabel.textContent.includes('*')) {
                    nipLabel.innerHTML += ' <span class="text-danger">*</span>';
                }
                nipField.placeholder = 'NIP 18 digit (wajib untuk PNS)';
            } else {
                nipField.removeAttribute('required');
                if (nipLabel) {
                    nipLabel.innerHTML = nipLabel.innerHTML.replace(' <span class="text-danger">*</span>', '');
                }
                nipField.placeholder = 'NIP 18 digit (opsional untuk PPPK)';
            }
        }
    }
    
    // Initial toggle
    if (statusKepegawaianField) {
        togglePnsFields();
        statusKepegawaianField.addEventListener('change', togglePnsFields);
    }
    
    // NIP validation
    if (nipField) {
        nipField.addEventListener('input', function() {
            let value = this.value.replace(/\D/g, ''); // Remove non-digits
            this.value = value;
            
            // Visual feedback
            if (value.length === 0) {
                this.classList.remove('is-valid', 'is-invalid');
            } else if (value.length === 18) {
                this.classList.remove('is-invalid');
                this.classList.add('is-valid');
            } else {
                this.classList.remove('is-valid');
                this.classList.add('is-invalid');
            }
        });
    }
    
    // Jumlah anak validation
    const jumlahAnakField = document.getElementById('user_jumlahAnak');
    if (jumlahAnakField) {
        jumlahAnakField.addEventListener('input', function() {
            const value = parseInt(this.value);
            if (value >= 0 && value <= 20) {
                this.classList.remove('is-invalid');
                this.classList.add('is-valid');
            } else {
                this.classList.remove('is-valid');
                this.classList.add('is-invalid');
            }
        });
    }
    
    // Form submission confirmation
    form.addEventListener('submit', function(e) {
        const nama = document.getElementById('user_nama').value;
        const nip = nipField ? nipField.value : '';
        
        let message = `Yakin ingin menyimpan perubahan untuk "${nama}"?`;
        if (nip) {
            message += `\nNIP: ${nip}`;
        }
        
        const confirmed = confirm(message);
        if (!confirmed) {
            e.preventDefault();
        }
    });
});
</script>
{% endblock %}