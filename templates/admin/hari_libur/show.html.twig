{% extends 'base.html.twig' %}

{% block title %}Detail Hari Libur{% endblock %}

{% block body %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">
        <i class="bi bi-calendar-event"></i>
        Detail Hari Libur
    </h1>
    
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a href="{{ path('admin_hari_libur_edit', {'id': hari_libur.id}) }}" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <button type="button" 
                    class="btn btn-danger"
                    onclick="confirmDelete({{ hari_libur.id }}, '{{ hari_libur.tanggal|date('d/m/Y') }} - {{ hari_libur.keterangan|e('js') }}')">
                <i class="bi bi-trash"></i> Hapus
            </button>
        </div>
        <a href="{{ path('admin_hari_libur_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Kembali
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <!-- Main Info Card -->
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Informasi Hari Libur</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <table class="table table-borderless">
                            <tr>
                                <th width="40%">Tanggal:</th>
                                <td>
                                    <strong class="fs-5">{{ hari_libur.tanggal|date('d F Y') }}</strong>
                                </td>
                            </tr>
                            <tr>
                                <th>Hari:</th>
                                <td>
                                    <span class="badge fs-6 
                                        {% if hari_libur.tanggal|date('w') == 0 %}bg-danger
                                        {% elseif hari_libur.tanggal|date('w') == 6 %}bg-warning
                                        {% else %}bg-success
                                        {% endif %}">
                                        {{ hari_libur.tanggal|date('l')|trans }}
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <th>Keterangan:</th>
                                <td>
                                    <div class="bg-light p-2 rounded">
                                        {{ hari_libur.keterangan }}
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <table class="table table-borderless">
                            <tr>
                                <th width="40%">Tahun:</th>
                                <td>
                                    <span class="badge bg-primary">{{ hari_libur.tanggal|date('Y') }}</span>
                                </td>
                            </tr>
                            <tr>
                                <th>Status:</th>
                                <td>
                                    {% if hari_libur.tanggal < date() %}
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-clock-history"></i> Sudah Lewat
                                        </span>
                                    {% elseif hari_libur.tanggal|date('Y-m-d') == date()|date('Y-m-d') %}
                                        <span class="badge bg-success">
                                            <i class="bi bi-calendar-check"></i> Hari Ini
                                        </span>
                                    {% else %}
                                        <span class="badge bg-info">
                                            <i class="bi bi-calendar-event"></i> Akan Datang
                                        </span>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th>Jenis Hari:</th>
                                <td>
                                    {% if hari_libur.tanggal|date('w') == 0 %}
                                        <span class="text-danger">
                                            <i class="bi bi-sun"></i> Minggu
                                        </span>
                                    {% elseif hari_libur.tanggal|date('w') == 6 %}
                                        <span class="text-warning">
                                            <i class="bi bi-calendar3"></i> Sabtu
                                        </span>
                                    {% else %}
                                        <span class="text-success">
                                            <i class="bi bi-briefcase"></i> Hari Kerja
                                        </span>
                                    {% endif %}
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Timeline Card -->
        <div class="card mt-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-clock-history"></i>
                    Riwayat
                </h5>
            </div>
            <div class="card-body">
                <div class="timeline">
                    <div class="d-flex">
                        <div class="flex-shrink-0">
                            <div class="badge bg-success rounded-pill p-2">
                                <i class="bi bi-plus-circle"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="mb-0">Hari Libur Dibuat</h6>
                            <p class="mb-1">Data hari libur berhasil ditambahkan ke sistem</p>
                            <small class="text-muted">{{ hari_libur.createdAt|date('d/m/Y H:i') }}</small>
                        </div>
                    </div>
                    
                    {% if hari_libur.updatedAt != hari_libur.createdAt %}
                    <hr>
                    <div class="d-flex">
                        <div class="flex-shrink-0">
                            <div class="badge bg-warning rounded-pill p-2">
                                <i class="bi bi-pencil"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="mb-0">Data Diperbarui</h6>
                            <p class="mb-1">Informasi hari libur telah diperbarui</p>
                            <small class="text-muted">{{ hari_libur.updatedAt|date('d/m/Y H:i') }}</small>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <!-- Quick Stats Card -->
        <div class="card">
            <div class="card-header bg-light">
                <h6 class="mb-0">
                    <i class="bi bi-graph-up"></i> Informasi Tambahan
                </h6>
            </div>
            <div class="card-body">
                {% set days_until = (hari_libur.tanggal.timestamp - date().timestamp) // 86400 %}
                
                {% if hari_libur.tanggal < date() %}
                    <div class="text-center p-3 bg-light rounded">
                        <i class="bi bi-clock-history display-6 text-muted"></i>
                        <h6 class="mt-2">Sudah Berlalu</h6>
                        <p class="text-muted mb-0">{{ (date().timestamp - hari_libur.tanggal.timestamp) // 86400 }} hari yang lalu</p>
                    </div>
                {% elseif hari_libur.tanggal|date('Y-m-d') == date()|date('Y-m-d') %}
                    <div class="text-center p-3 bg-success bg-opacity-10 rounded">
                        <i class="bi bi-calendar-check display-6 text-success"></i>
                        <h6 class="mt-2 text-success">Hari Ini!</h6>
                        <p class="text-success mb-0">Selamat hari libur</p>
                    </div>
                {% else %}
                    <div class="text-center p-3 bg-info bg-opacity-10 rounded">
                        <i class="bi bi-calendar-event display-6 text-info"></i>
                        <h6 class="mt-2 text-info">{{ days_until }} Hari Lagi</h6>
                        <p class="text-info mb-0">Menuju hari libur</p>
                    </div>
                {% endif %}
            </div>
        </div>

        <!-- Action Card -->
        <div class="card mt-3">
            <div class="card-header bg-light">
                <h6 class="mb-0">
                    <i class="bi bi-tools"></i> Aksi
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="{{ path('admin_hari_libur_edit', {'id': hari_libur.id}) }}" 
                       class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Edit Hari Libur
                    </a>
                    
                    <button type="button" 
                            class="btn btn-outline-danger"
                            onclick="confirmDelete({{ hari_libur.id }}, '{{ hari_libur.tanggal|date('d/m/Y') }} - {{ hari_libur.keterangan|e('js') }}')">
                        <i class="bi bi-trash"></i> Hapus Hari Libur
                    </button>
                    
                    <hr>
                    
                    <button class="btn btn-outline-primary" onclick="window.print()">
                        <i class="bi bi-printer"></i> Cetak
                    </button>
                </div>
            </div>
        </div>

        <!-- Navigation Card -->
        <div class="card mt-3">
            <div class="card-header bg-light">
                <h6 class="mb-0">
                    <i class="bi bi-arrow-left-right"></i> Navigasi
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="{{ path('admin_hari_libur_new') }}" class="btn btn-outline-success btn-sm">
                        <i class="bi bi-plus-circle"></i> Tambah Hari Libur Baru
                    </a>
                    
                    <a href="{{ path('admin_hari_libur_index') }}" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-list"></i> Lihat Semua Hari Libur
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Form (Hidden) -->
<form id="deleteForm" method="post" style="display: none;">
    <input type="hidden" name="_token" id="deleteToken">
</form>

{% endblock %}

{% block javascripts %}
<script>
function confirmDelete(id, description) {
    if (confirm(`Yakin ingin menghapus hari libur "${description}"?\n\nPerhatian: Aksi ini tidak dapat dibatalkan.`)) {
        const form = document.getElementById('deleteForm');
        const token = '{{ csrf_token('delete') }}' + id;
        
        form.action = '{{ path('admin_hari_libur_delete', {'id': hari_libur.id}) }}';
        document.getElementById('deleteToken').value = token;
        form.submit();
    }
}
</script>
{% endblock %}

{% block stylesheets %}
<style>
@media print {
    .btn-toolbar, .card:last-child, .modal, nav, .sidebar {
        display: none !important;
    }
    
    .main-content {
        margin: 0 !important;
        padding: 0 !important;
    }
    
    .card {
        border: none !important;
        box-shadow: none !important;
    }
}

.timeline .d-flex:not(:last-child) {
    margin-bottom: 1rem;
}
</style>
{% endblock %}