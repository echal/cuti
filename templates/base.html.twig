<!DOCTYPE html>
<html lang="id">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Aplikasi Cuti{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        
        {# Bootstrap CSS #}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
        
        {# Custom CSS #}
        <style>
            .navbar-brand {
                font-weight: bold;
            }
            .sidebar {
                min-height: calc(100vh - 76px);
                background-color: #f8f9fa;
            }
            .main-content {
                min-height: calc(100vh - 76px);
            }
            .status-badge {
                font-size: 0.75rem;
                padding: 0.25rem 0.5rem;
            }
            .table-responsive {
                border-radius: 0.375rem;
                box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            }
            .card {
                box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            }
            .btn-sm {
                padding: 0.25rem 0.5rem;
                font-size: 0.75rem;
            }
        </style>
        
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        {# Navigation #}
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ app.user ? path('pengajuan_cuti_index') : path('app_login') }}">
                    <i class="bi bi-calendar-check"></i>
                    Aplikasi Cuti
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        {% if app.user %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('pengajuan_cuti_index') }}">
                                    <i class="bi bi-house"></i> Dashboard
                                </a>
                            </li>
                            
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('pengajuan_cuti_index') }}">
                                    <i class="bi bi-calendar-plus"></i> Pengajuan Saya
                                </a>
                            </li>
                            
                            {% if is_granted('ROLE_APPROVER') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('pengajuan_cuti_index') }}">
                                    <i class="bi bi-check-circle"></i> Persetujuan
                                </a>
                            </li>
                            {% endif %}
                            
                            {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-gear"></i> Master Data
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="{{ path('admin_user_index') }}">
                                        <i class="bi bi-people"></i> Kelola User
                                    </a></li>
                                    <li><a class="dropdown-item" href="{{ path('admin_jenis_cuti_index') }}">
                                        <i class="bi bi-list-ul"></i> Jenis Cuti
                                    </a></li>
                                    <li><a class="dropdown-item" href="{{ path('admin_hari_libur_index') }}">
                                        <i class="bi bi-calendar-x"></i> Hari Libur
                                    </a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="{{ path('admin_unit_kerja_index') }}">
                                        <i class="bi bi-building"></i> Unit Kerja
                                    </a></li>
                                    <li><a class="dropdown-item" href="{{ path('admin_pejabat_index') }}">
                                        <i class="bi bi-person-badge"></i> Pejabat
                                    </a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="{{ path('pengajuan_cuti_konfigurasi') }}">
                                        <i class="bi bi-gear-fill"></i> Konfigurasi Sistem
                                    </a></li>
                                </ul>
                            </li>
                            {% endif %}
                        {% endif %}
                    </ul>
                    
                    <ul class="navbar-nav">
                        {% if app.user %}
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle"></i>
                                    {{ app.user.nama }}
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><h6 class="dropdown-header">
                                        {{ app.user.unitKerja ? app.user.unitKerja.nama : 'Unit Kerja belum diset' }}
                                    </h6></li>
                                    <li><span class="dropdown-item-text small">
                                        {{ app.user.statusKepegawaian }} - {{ app.user.nip }}
                                    </span></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="{{ path('profile_show') }}">
                                        <i class="bi bi-person"></i> Profil
                                    </a></li>
                                    <li><a class="dropdown-item" href="{{ path('profile_change_password') }}">
                                        <i class="bi bi-key"></i> Ubah Password
                                    </a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="{{ path('app_logout') }}">
                                        <i class="bi bi-box-arrow-right"></i> Logout
                                    </a></li>
                                </ul>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_login') }}">
                                    <i class="bi bi-box-arrow-in-right"></i> Login
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>

        {# Flash Messages #}
        {{ include('partials/_flash.html.twig') }}

        {# Main Content Container #}
        <div class="container-fluid">
            <div class="row">
                {% if app.user %}
                    {# Sidebar - hanya tampil jika user login #}
                    <nav class="col-md-2 d-md-block sidebar collapse">
                        <div class="position-sticky pt-3">
                            <ul class="nav flex-column">
                                <li class="nav-item">
                                    <a class="nav-link {{ app.request.get('_route') starts with 'pengajuan_cuti' ? 'active' : '' }}" 
                                       href="{{ path('pengajuan_cuti_index') }}">
                                        <i class="bi bi-calendar-check"></i>
                                        Pengajuan Cuti
                                    </a>
                                </li>
                                
                                <li class="nav-item">
                                    <a class="nav-link {{ app.request.get('_route') starts with 'laporan' ? 'active' : '' }}" 
                                       href="{{ path('laporan_index') }}">
                                        <i class="bi bi-bar-chart"></i>
                                        Laporan
                                    </a>
                                </li>
                                
                                {% if is_granted('ROLE_ADMIN') %}
                                <li class="nav-item">
                                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted text-uppercase">
                                        <span>Administrasi</span>
                                    </h6>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link {{ app.request.get('_route') starts with 'admin_user' ? 'active' : '' }}" 
                                       href="{{ path('admin_user_index') }}">
                                        <i class="bi bi-people"></i>
                                        Kelola User
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link {{ app.request.get('_route') starts with 'admin_jenis_cuti' ? 'active' : '' }}" 
                                       href="{{ path('admin_jenis_cuti_index') }}">
                                        <i class="bi bi-list-ul"></i>
                                        Jenis Cuti
                                    </a>
                                </li>
                                {% endif %}
                            </ul>
                        </div>
                    </nav>
                    {# Main content column with sidebar #}
                    <div class="col-md-10 ms-sm-auto px-md-4 main-content">
                {% else %}
                    {# Full width column for login page #}
                    <div class="col-12 main-content">
                {% endif %}
                        <div class="pt-3 pb-2 mb-3">
                            {% block body %}{% endblock %}
                        </div>
                    </div>
            </div>
        </div>

        {# Bootstrap JS #}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        
        {# Custom JavaScript #}
        <script>
            // Auto-hide flash messages after 5 seconds
            document.addEventListener('DOMContentLoaded', function() {
                const alerts = document.querySelectorAll('.alert');
                alerts.forEach(function(alert) {
                    setTimeout(function() {
                        const bsAlert = new bootstrap.Alert(alert);
                        bsAlert.close();
                    }, 5000);
                });
            });

            // Confirm dialogs for delete actions
            document.addEventListener('click', function(e) {
                if (e.target.classList.contains('btn-delete') || e.target.closest('.btn-delete')) {
                    if (!confirm('Yakin ingin menghapus data ini?')) {
                        e.preventDefault();
                    }
                }
            });
        </script>
        
        {% block javascripts %}{% endblock %}
    </body>
</html>